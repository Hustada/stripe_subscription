<div class="container">
	<h3>Account for <%= current_user.email %></h3>
	<% if @plan.active %>
	<h3>Current plan renews at: <%= Time.at(@stripe_plan["current_period_end"]).strftime("%D") %></h3>
	<%= link_to 'Cancel subscription', users_cancel_plan_path %>
	<% else %>
		<%= render 'form' %>
	<% end %>
</div>
